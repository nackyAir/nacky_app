{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NEXT_PUBLIC_*", "!NEXT_PUBLIC_VERCEL_*"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "env": ["RESEND_API_KEY"]
    },
    "clean": {
      "cache": false
    }
  },
  "globalEnv": ["NEXT_PUBLIC_*", "!NEXT_PUBLIC_VERCEL_*", "RESEND_API_KEY"]
}
