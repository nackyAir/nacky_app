{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@repo/ui/components/*": ["../../packages/ui/src/components/ui/*"],
      "@repo/ui/icons/*": ["../../packages/ui/src/icons/*"],
      "@repo/ui/utils/*": ["../../packages/ui/src/lib/*.ts"],
      "@repo/resend/*": ["../../packages/resend/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/ui/**/*.ts",
    "../../packages/ui/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
